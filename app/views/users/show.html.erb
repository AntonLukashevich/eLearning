<div class="main-body">
  <div class="row gutters-sm">
    <div class="col-md-4 mb-3">
      <div class="card">
        <div class="card-body">
          <div class="d-flex flex-column align-items-center text-center">
            <% if @user.avatar? %>
              <%= image_tag @user.avatar.url(:thumb), class: "rounded-circle" %>
            <% else %>
              <%= image_tag ("default-avatar.png") %>
            <% end %>
            <div class="mt-3">
              <h5><%= @user.first_name %></h5>
              <p class="text-muted font-size-sm"><%= @user.email %></p>
              <% if  user_signed_in?%>
                <%  if @user.id == current_user.id %>
                    <%= link_to t('users.edit.title'), edit_user_path, class: 'btn btn-editor' %>
                  <%end %>
              <% end %>

            </div>
          </div>
        </div>
      </div>
      <div class="card mt-3">
        <ul class="list-group list-group-flush">
          <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
            <h6 class="mb-0">
              <%= link_to t('organization.new.title'), new_organization_path %>
            </h6>

          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
            <h6 class="mb-0">
            <%= link_to t('courses.new.title'), new_course_path %>
            </h6>
          </li>


        </ul>
      </div>
    </div>
    <div class="col-md-8">
      <div class="card mb-3">
        <div class="card-body">
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0"><%= t('users.full_name') %></h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= @user.first_name %> <%= @user.last_name %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0"><%= t('users.email') %></h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= @user.email %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">ID:</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= @user.id %>
            </div>
          </div>
          <hr>
        </div>
      </div>
      <div class="row gutters-sm">
        <div class="col-sm-6 mb-3">
          <div class="card h-100">
            <div class="card-body">
              <h6 class="d-flex align-items-center mb-3">
                <i class="material-icons text-info mr-2">
                  <%= t('users.show.certificates.titles') %>
                </i>
              </h6>
            </div>
          </div>
        </div>
        <div class="col-sm-6 mb-3">
          <div class="card h-100">
            <div class="card-body">
              <h6 class="d-flex align-items-center mb-3">
                <i class="material-icons text-info mr-2">
                  <%= link_to t('organization.titles'), organizations_path, style: "color: #17a2b8;"%>
                </i>
              </h6>
              <div style="min-height:100px; height: 300px; overflow-y: scroll;">
                <% @organizations.each do |org| %>
                  <div class="card pl-2 pb-1 pt-1 mb-1">
                    <%= link_to org.title, organization_path(org), style: "color: black" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




